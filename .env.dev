# Configuration de développement pour messaging-service
# Base de données SQLite (pour développement local)
DATABASE_URL="sqlite:///tmp/whispr_messaging_dev.db"

# Cache en mémoire (fallback sans Redis)
REDIS_URL=""
REDIS_HOST=""
REDIS_PORT=""
REDIS_PASSWORD=""
REDIS_DB=""
CACHE_ADAPTER="memory"

# JWT Configuration
JWT_SECRET="dev-jwt-secret-key-change-in-production"
JWT_ISSUER="auth-service"
JWT_AUDIENCE="messaging-service,whispr-services"

# Services externes (simulés en développement)
AUTH_SERVICE_URL="http://localhost:4000"
AUTH_SERVICE_HOST="localhost"
AUTH_SERVICE_PORT=50051

USER_SERVICE_URL="http://localhost:4001"
USER_SERVICE_HOST="localhost"
USER_SERVICE_PORT=50052

NOTIFICATION_SERVICE_URL="http://localhost:4002"
NOTIFICATION_SERVICE_HOST="localhost"
NOTIFICATION_SERVICE_PORT=50053

MEDIA_SERVICE_URL="http://localhost:4003"
MEDIA_SERVICE_HOST="localhost"
MEDIA_SERVICE_PORT=50054

# gRPC Configuration
GRPC_PORT=50055
GRPC_SSL=false
GRPC_TIMEOUT=5000

# Phoenix Configuration
PORT=4004
SECRET_KEY_BASE="dev-secret-key-base-change-in-production-must-be-at-least-64-characters-long"
PHX_HOST="localhost"

# Environnement
MIX_ENV=dev
ENVIRONMENT=dev

# Logging
LOG_LEVEL=debug

# Métriques et monitoring
TELEMETRY_ENABLED=true
METRICS_PORT=9090

# Mode développement
DEV_MODE=true